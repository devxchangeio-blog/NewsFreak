<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@android:color/white" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<com.credly.newsfreak.libs.ActionBar
		android:id="@+id/detailActionbar" style="@style/ActionBar" />
	<TextView android:layout_width="wrap_content"
		android:textColor="@android:color/black" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="TextView" android:id="@+id/newstitle" />
	<TextView android:layout_width="wrap_content"
		android:textColor="@android:color/black" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="TextView" android:id="@+id/newsdate" />
	
	<ScrollView android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical"
			android:background="@android:color/white" android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<ImageView android:src="@drawable/android" android:id="@+id/detialImage"
				android:layout_width="match_parent" android:layout_height="wrap_content"/>
			<TextView android:text="TextView" android:id="@+id/newsdescription"
				android:textColor="@android:color/black" android:layout_width="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_height="wrap_content"></TextView>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
