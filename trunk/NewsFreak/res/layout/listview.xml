<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:background="@android:color/white" xmlns="default namespace"
	android:layout_height="match_parent">

	<LinearLayout android:layout_width="match_parent"
		android:background="@android:color/white" android:layout_height="wrap_content"
		android:id="@+id/linearLayout2">
		<ImageView android:layout_height="match_parent" android:id="@+id/image"
			android:layout_width="wrap_content" android:src="@drawable/newsfreakicon"
			android:scaleType="centerCrop" />
		<TextView android:layout_width="wrap_content" android:lines="2"
			android:textColor="@android:color/black" android:layout_height="wrap_content"
			android:text="TextView" android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/title" />

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent" android:paddingLeft="48px"
		android:background="@android:color/white" android:layout_height="wrap_content"
		android:id="@+id/linearLayout1" android:orientation="vertical">

		<TextView android:layout_width="wrap_content"
			android:textColor="@android:color/black" android:layout_height="wrap_content"
			android:text="TextView" android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/date" />

	</LinearLayout>

</LinearLayout>
